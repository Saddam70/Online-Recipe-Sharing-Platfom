      </ul>
</div>
</div>
</nav>
</div>
	<div class="container mt-5">
	<table class="table table-striped table-bordered">
		<thead class="thead-light">
	<tr>
		<th>User ID</th>
		<th>User Name</th>
		<th>Email Id</th>
		<th>PassWord</th>

		<th>Role</th>
		<th>Date</th>
		<th>Gender</th>
		<th>Favorite Causines</th>
		<th>Dietary Prefences</th>
	</tr>
	</thead>
	<tbody>
	@{
		@if (Model != null && Model.Any())
		{
			foreach (var cx in Model)
			{
				<tr>
					<td>@cx.UserId</td>
					<td>@cx.Username</td>
					<td>@cx.EmailId</td>
					<td>@cx.Password</td>

					<td>@cx.Role</td>
					<td>@cx.Date</td>
					<td>@cx.Gender</td>
					<td>@cx.FavoriteCuisines</td>
					<td>@cx.DietaryPreferences</td>

							<td><a asp-route="GetByUserId" class="btn btn-sm btn-info" asp-route-id="@cx.UserId">Details</a> </td>
							<td><a asp-route="DeleteUser" class="btn btn-sm btn-danger" asp-route-id="@cx.UserId">Delete</a> </td>
							<td><a asp-route="EditUser" class="btn btn-sm btn-warning" asp-route-id="@cx.UserId">Edit</a> </td>
				</tr>
			}
		}
		else
		{
			<p>No User found</p>
		}
	}
	</tbody>
</table>
</div>
