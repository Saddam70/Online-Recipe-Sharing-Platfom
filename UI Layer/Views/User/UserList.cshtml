			<a asp-route="RegisterUser" class="btn btn-primary">Add New User</a>
		</div>
	<nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top">
		<div class="container">
	<div class="collapse navbar-collapse" id="navbarNav">

		<ul class="navbar-nav">
	@* 		<li class="nav-item">
				<a class="nav-link" asp-route="RecipeList">Recipe List</a>
            </li>

			<li class="nav-item">
				<a class="nav-link" asp-route="RecipeStepList">Recipe Step List</a>
