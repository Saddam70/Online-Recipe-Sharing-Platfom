



 
 @model UI_Layer.Models.User

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Delete By Id</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

    <style>
        body {
            background-color: #f8f9fa; /* Light grey background */
            padding-top: 56px; /* Adjusts for navbar */
        }

        .header, .footer {
            background-color: #343a40;
            color: white;
            padding: 20px;
            text-align: center;
        }

        .content-wrapper {
            max-width: 800px;
            margin: auto;
            padding: 20px;
            background-color: white;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .btn-delete {
            background-color: #dc3545;
            color: white;
            border: none;
        }

        .btn-cancel {
            background-color: #ffff45;
            color: white;
            border: none;
        }

            .btn-delete:hover {
                background-color: #c82333;
            }
    </style>
</head>
<body>

    <!-- Header -->
    <header class="header">
        <h1>User Management</h1>
    </header>

    <!-- Main Content -->
    <div class="content-wrapper">
        <h2 class="text-center">Delete User by ID</h2>

        <div class="mb-3">
            <a href="@Url.Action("UserList")" class="btn btn-primary">Back to User List</a>
        </div>

        <form asp-route="RemoveUser" method="post">
            <div class="mb-3">
                <label asp-for="UserId" class="form-label">User ID</label>
                <input type="number" asp-for="UserId" class="form-control" readonly />
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Username" class="form-label">User Name</label>
                <input type="text" asp-for="Username" class="form-control" readonly />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="EmailId" class="form-label">Email ID</label>
                <input type="email" asp-for="EmailId" class="form-control" readonly />
                <span asp-validation-for="EmailId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label">Password</label>
                <input type="password" asp-for="Password" class="form-control" readonly />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Role" class="form-label">Role</label>
                <input type="text" asp-for="Role" class="form-control" readonly />
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Date" class="form-label">Date</label>
                <input type="date" asp-for="Date" class="form-control" readonly />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Gender" class="form-label">Gender</label>
                <select asp-for="Gender" class="form-control" readonly>
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                    <option value="Other">Other</option>
                </select>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="FavoriteCuisines" class="form-label">Favorite Cuisines</label>
                <input type="text" asp-for="FavoriteCuisines" class="form-control" readonly />
                <span asp-validation-for="FavoriteCuisines" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="DietaryPreferences" class="form-label">Dietary Preferences</label>
                <input type="text" asp-for="DietaryPreferences" class="form-control" readonly />
                <span asp-validation-for="DietaryPreferences" class="text-danger"></span>
            </div>

            <div class="d-grid gap-2">
                <input type="submit" class="btn btn-delete btn-lg" value="Delete User"/>
                <a href="@Url.Action("UserList")" class="btn btn-cancel btn-lg ms-3">Cancel</a>
            </div>
        </form>
    </div>

    <!-- Footer -->
    <footer class="footer mt-5">
        <p>&copy; 2024 Online Recipe Management. All Rights Reserved.</p>
    </footer>

   
</body>
</html>
