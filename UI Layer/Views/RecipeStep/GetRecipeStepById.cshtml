@model UI_Layer.Models.RecipeStep

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> Recipe Step Detail by Id</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
            color: #343a40;
        }

        header {
            background-color: #28a745;
            color: white;
            padding: 15px;
            text-align: center;
        }

        footer {
            background-color: #28a745;
            color: white;
            text-align: center;
            padding: 10px;
            position: fixed;
            bottom: 0;
            width: 100%;
        }

        .container {
            max-width: 600px;
            margin: 50px auto;
            padding: 20px;
            background-color: #ffffff;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .form-control {
            margin-bottom: 15px;
        }

        .btn-cancel {
            background-color: #ffff45;
            color: white;
            border: none;
        }

        input[type="submit"] {
            background-color: #28a745;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
        }

            input[type="submit"]:hover {
                background-color: #218838;
            }

    </style>
</head>
<body>

    <header>
        <h1>Recipe Step Details By Id</h1>
    </header>

    <div class="container">

        <div>
            <a asp-route="RecipeStepList">Recipe Step List</a>
        </div>

<dl class="row">
    <dt class="col-sm-2">
        Step Number
    </dt>
    <dd class="col-sm-10">
        @Model.StepNumber
    </dd>

    <dt class="col-sm-2">
        Instruction
    </dt>
    <dd class="col-sm-10">
        @Model.Instruction
    </dd>

    <dt class="col-sm-2">
        Image URL
    </dt>
    <dd class="col-sm-10">
        <img src="@Model.ImageUrl" alt="Step Image" style="max-width: 100px; max-height: 100px;" />
    </dd>

    <dt class="col-sm-2">
        Recipe ID
    </dt>
    <dd class="col-sm-10">
        @Model.RecipeId
    </dd>
</dl>
        

        <div>

            <a href="@Url.Action("RecipeStepList")" class="btn btn-cancel btn-lg ms-3">Back</a>
        </div>

    </div>

    <footer>
        <p>&copy; 2024 Recipe Sharing Platform. All rights reserved.</p>
    </footer>

</body>
</html>