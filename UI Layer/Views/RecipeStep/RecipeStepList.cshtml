@model List<UI_Layer.Models.RecipeStep>
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Recipe List</title>
	<!-- Bootstrap CSS -->
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
	<style>
		body {
			padding-top: 56px; /* Adjust for fixed navbar */
		}

		.footer {
			background-color: #f8f9fa;
			padding: 20px;
			text-align: center;
		}

		.navbar-brand {
			font-weight: bold;
		}
	</style>
</head>
<body>
	<div class="container mt-5">
		<h3 class="mt-4 mb-4">All Recipe Step List</h3>

		<!-- Add New Recipe Step Link -->
		<div class="mb-4">
			<a asp-route="AddRecipeStep" class="btn btn-primary">Add New Recipe Step</a>
		</div>
		<nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top">
			<div class="container">
				<div class="collapse navbar-collapse" id="navbarNav">

					<ul class="navbar-nav">
						<li class="nav-item">
							<a class="nav-link" asp-route="RecipeList">Recipe  List</a>
						</li>

						<li class="nav-item">
							<a class="nav-link" asp-route="IngredientList">Ingredient List</a>
						</li>
					
						<li class="nav-item">
							<a class="nav-link" asp-route="RecipeStepList">Home</a>
						</li>
					</ul>
				</div>
			</div>
		</nav>
	</div>
	<div class="container mt-5">
		<table class="table table-striped table-bordered">
			<thead class="thead-light">
				<tr>
					<th>Recipe Step ID</th>
					<th>Recipe Step Number</th>
					<th>Recipe Istruction</th>
					<th>Image Url</th>
					<th>Recipe Id</th>
				</tr>
			</thead>


			<tbody>
				@{
					@if (Model != null && Model.Any())
					{
						foreach (var rcp in Model)
						{
							<tr>
								<td>@rcp.RecipeStepId</td>
								<td>@rcp.StepNumber</td>
								<td>@rcp.Instruction</td>
								@*<td>@rcp.ImageUrl</td>*@
								<td>
									<img src="@rcp.ImageUrl" alt="Step Image" style="max-width: 100px; max-height: 100px;" />
								</td>

								<td>@rcp.RecipeId</td>

								<td><a asp-route="GetRecipestepById" class="btn btn-sm btn-info" asp-route-id="@rcp.RecipeStepId">Details</a> </td>
								<td><a asp-route="DeleteRecipeStep" class="btn btn-sm btn-danger" asp-route-id="@rcp.RecipeStepId">Delete</a> </td>
								<td><a asp-route="EditRecipeStep" class="btn btn-sm btn-warning" asp-route-id="@rcp.RecipeStepId">Edit</a> </td>
							</tr>
						}
					}
					else
					{
						<tr>
							<td colspan="6">No Recipe Steps found.</td>
						</tr>
					}
				}
</tbody>
		</table>
	</div>
	<!-- Footer -->
	<footer class="footer mt-5">
		<div class="container">
			<p>&copy; 2024 RecipeStepList Dashboard. All rights reserved.</p>
		</div>
	</footer>
</body>

</html>

	
	


