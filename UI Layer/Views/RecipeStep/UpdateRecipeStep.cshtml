@model UI_Layer.Models.RecipeStep

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Recipe Step</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
            color: #343a40;
        }

        header {
            background-color: #28a745;
            color: white;
            padding: 15px;
            text-align: center;
        }

        footer {
            background-color: #28a745;
            color: white;
            text-align: center;
            padding: 10px;
            position: fixed;
            bottom: 0;
            width: 100%;
        }

        .container {
            max-width: 600px;
            margin: 50px auto;
            padding: 20px;
            background-color: #ffffff;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .form-control {
            margin-bottom: 15px;
        }

        .btn-cancel {
            background-color: #ffff45;
            color: white;
            border: none;
        }

        input[type="submit"] {
            background-color: #28a745;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
        }

            input[type="submit"]:hover {
                background-color: #218838;
            }

    </style>
</head>
<body>

    <header>
        <h1>Update Recipe Step</h1>
    </header>

    <div class="container">
        <div>
            <a asp-route="RecipeStepList">Recipe Step List</a>
        </div>
<form asp-route="UpdateRecipeStep" method="post">
    @* <input type="hidden" asp-for="RecipeStepId" /> *@
            <div class="mb-3">
                <label asp-for="RecipeStepId">Recipe Step Number</label>
                <input type="number" asp-for="RecipeStepId" class="form-control" />
                <span asp-validation-for="StepNumber" class="text-danger"></span>
            </div>
    <div class="mb-3">
        <label asp-for="StepNumber">Step Number</label>
        <input type="number" asp-for="StepNumber" class="form-control" />
        <span asp-validation-for="StepNumber" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Instruction">Instruction</label>
        <textarea asp-for="Instruction" class="form-control"></textarea>
        <span asp-validation-for="Instruction" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ImageUrl">Image URL</label>
        <input type="text" asp-for="ImageUrl" class="form-control" />
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="RecipeId">Recipe ID</label>
        <input type="number" asp-for="RecipeId" class="form-control" />
        <span asp-validation-for="RecipeId" class="text-danger"></span>
    </div>

    <input type="submit" value="Update Recipe Step" />
            <a href="@Url.Action("RecipeStepList")" class="btn btn-cancel btn-lg ms-3">Cancel</a>
</form>
    </div>

    <footer>
        <p>&copy; 2024 Recipe Sharing Platform. All rights reserved.</p>
    </footer>

</body>
</html>