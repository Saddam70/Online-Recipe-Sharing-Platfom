@model List<UI_Layer.Models.Ingredient>

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Ingredient List</title>
	<!-- Bootstrap CSS -->
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
	<style>
		body {
			padding-top: 56px; /* Adjust for fixed navbar */
		}

		.footer {
			background-color: #f8f9fa;
			padding: 20px;
			text-align: center;
		}

		.navbar-brand {
			font-weight: bold;
		}
	</style>
</head>
<body>
	<div class="container mt-5">
		<h3 class="mt-4 mb-4">All Ingredient List</h3>

		<!-- Add New Ingredient Link -->
		<div class="mb-4">
			<a asp-route="AddIngredient" class="btn btn-primary">Add New Ingredient</a>
		</div>
		<nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top">
			<div class="container">
				<div class="collapse navbar-collapse" id="navbarNav">

					<ul class="navbar-nav">
						<li class="nav-item">
							<a class="nav-link" asp-route="RecipeStepList">Recipe Step List</a>
						</li>

						<li class="nav-item">
							<a class="nav-link" asp-route="RecipeList">Recipe List</a>
						</li>
					
						<li class="nav-item">
							<a class="nav-link" asp-route="IngredientList">Home</a>
						</li>
					</ul>
				</div>
			</div>
		</nav>
	</div>
	<div class="container mt-5">
		<table class="table table-striped table-bordered">
			<thead class="thead-light">
				<tr>
					<th>Ingredient ID</th>
					<th>Ingrdient Name</th>
					<th>Quantity</th>
					<th>Recipe Id</th>
				</tr>
			</thead>
			<tbody>
				@{
					@if (Model != null && Model.Any())
					{
						foreach (var ing in Model)
						{
							<tr>
								<td>@ing.IngredientId</td>
								<td>@ing.Name</td>
								<td>@ing.Quantity</td>
								<td>@ing.RecipeId</td>
								<td><a asp-route="GetIngredientById" class="btn btn-sm btn-info" asp-route-id="@ing.IngredientId">Details</a> </td>
								<td><a asp-route="DeleteIngredient" class="btn btn-sm btn-danger" asp-route-id="@ing.IngredientId">Delete</a> </td>
								<td><a asp-route="EditIngredient" class="btn btn-sm btn-warning" asp-route-id="@ing.IngredientId">Edit</a> </td>
							</tr>
						}
					}
					else
					{
						<p>No Ingredient found</p>
					}
				}
			</tbody>
		</table>
	</div>
	<!-- Footer -->
	<footer class="footer mt-5">
		<div class="container">
			<p>&copy; 2024 IngredientList Dashboard. All rights reserved.</p>
		</div>
	</footer>
</body>

</html>



